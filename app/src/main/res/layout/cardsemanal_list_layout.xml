<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="130dp"
    android:paddingTop="6dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:weightSum="1">


    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:elevation="15dp"
        app:cardBackgroundColor="#babfc7"
        card_view:cardCornerRadius="3dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/cardTitle"
                android:layout_width="113dp"
                android:layout_height="25dp"
                android:layout_marginEnd="205dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="205dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:hint="Title"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/dataText"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_marginLeft="155dp"
                android:layout_marginTop="5dp"
                android:hint="Data: "
                android:textColor="@color/colorBlack"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_marginEnd="190dp"
                android:layout_marginLeft="84dp"
                android:layout_marginRight="190dp"
                android:layout_marginStart="40dp"
                android:layout_marginTop="89dp"
                android:hint="HorÃ¡rio:"
                android:textColor="@color/colorBlack"
                android:textSize="20dp" />


            <TextView
                android:id="@+id/cardDescription"
                android:layout_width="335dp"
                android:layout_height="65dp"
                android:layout_below="@+id/cardTitle"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:gravity="center"
                android:hint="Bla Bla Bla"
                android:textSize="18dp" />

            <ImageView
                android:id="@+id/novaTarefa_DataImage"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="85dp"
                app:srcCompat="@android:drawable/ic_menu_recent_history" />

            <ImageView
                android:id="@+id/cardDataimage"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginLeft="125dp"
                android:layout_marginTop="2dp"
                app:srcCompat="@android:drawable/ic_menu_my_calendar" />

            <ImageButton
                android:id="@+id/MiniMaxButton"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginEnd="0dp"
                android:layout_marginLeft="315dp"
                android:layout_marginRight="0dp"
                android:layout_marginStart="315dp"
                android:layout_marginTop="0dp"
                android:background="#c7ccd6"
                android:src="@drawable/ic_minimax" />


            <Button
                android:id="@+id/doneButton"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginEnd="0dp"
                android:layout_marginLeft="250dp"
                android:layout_marginRight="0dp"
                android:layout_marginStart="250dp"
                android:layout_marginTop="88dp"
                android:background="#c7ccd6"
                android:hint="Concluido"
                android:textSize="17dp" />

            <TextView
                android:id="@+id/cardHorario"
                android:layout_width="200dp"
                android:layout_height="25dp"
                android:layout_marginLeft="118dp"
                android:layout_marginStart="118dp"
                android:layout_marginTop="89dp"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/cardData"
                android:layout_width="116dp"
                android:layout_height="25dp"
                android:layout_marginEnd="40dp"
                android:layout_marginLeft="205dp"
                android:layout_marginRight="40dp"
                android:layout_marginStart="205dp"
                android:layout_marginTop="5dp"
                android:textSize="20dp" />
        </RelativeLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>
