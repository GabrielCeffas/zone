<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:minWidth="850dp"
    android:minHeight="550dp"
    tools:context="br.com.zone.fragment.novaTarefaFragment">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        app:title="Adicionar Tarefa"
        app:titleTextColor="@color/colorWhite" />

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <EditText
            android:id="@+id/novaTarefa_nome"
            android:layout_width="0dp"
            android:layout_height="46dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="Nome "
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="0dp"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent" />
        <EditText
            android:id="@+id/novaTarefa_descri"
            android:layout_width="0dp"
            android:layout_height="46dp"
            android:layout_marginEnd="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="1dp"
            android:ems="10"
            android:inputType="textMultiLine"
            android:hint="Descrição"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/novaTarefa_nome"
            app:layout_constraintHorizontal_bias="0.0" />


        <ImageView
            android:id="@+id/novaTarefa_DataImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@android:drawable/ic_menu_recent_history"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/novaTarefa_data"
            android:layout_marginStart="8dp" />

        <ImageView
            android:id="@+id/novaTarefa_TimeImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@android:drawable/ic_menu_my_calendar"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/novaTarefa_descri"
            android:layout_marginStart="8dp" />

        <EditText
            android:id="@+id/novaTarefa_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="7dp"
            android:ems="10"
            android:inputType="time"
            android:hint="Tempo de Realização"
            app:layout_constraintLeft_toRightOf="@+id/novaTarefa_DataImage"
            app:layout_constraintTop_toBottomOf="@+id/novaTarefa_data" />

        <EditText
            android:id="@+id/novaTarefa_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="-24dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="10dp"
            android:ems="10"
            android:inputType="date"
            android:hint="Data"
            app:layout_constraintLeft_toRightOf="@+id/novaTarefa_TimeImage"
            app:layout_constraintTop_toBottomOf="@+id/novaTarefa_descri" />




    </android.support.constraint.ConstraintLayout>
</LinearLayout>